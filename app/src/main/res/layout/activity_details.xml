<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
            android:id="@+id/posterImageView"
            android:layout_width="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_height="150dp"/>

    <com.popcornscrapper.popcornscrapper.SourceProRegularTextView
            android:id="@+id/movieTitleTextView"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:textSize="24sp"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:layout_height="wrap_content"/>

    <com.popcornscrapper.popcornscrapper.SourceProRegularTextView
            android:layout_marginTop="5dp"
            android:id="@+id/directorTextView"
            android:layout_width="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="20dp"
            android:textSize="16sp"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <com.popcornscrapper.popcornscrapper.RobotoMediumTextView
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:text="@string/imdb"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"/>

            <com.popcornscrapper.popcornscrapper.RobotoMediumTextView
                    android:id="@+id/imdbRatingTextView"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:textSize="32sp"
                    android:textColor="@color/colorAccent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
                android:layout_weight="1"
                android:layout_marginEnd="20dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <com.popcornscrapper.popcornscrapper.RobotoMediumTextView
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:text="@string/metacritic"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"/>

            <com.popcornscrapper.popcornscrapper.RobotoMediumTextView
                    android:id="@+id/metacriticRatingTextView"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:textSize="32sp"
                    android:textColor="@color/colorAccent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

    <com.popcornscrapper.popcornscrapper.RobotoMediumTextView
            android:layout_marginTop="10dp"
            android:id="@+id/movieDescriptionTextView"
            android:layout_width="match_parent"
            android:gravity="start"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textSize="14sp"
            android:layout_height="wrap_content"/>

</LinearLayout>